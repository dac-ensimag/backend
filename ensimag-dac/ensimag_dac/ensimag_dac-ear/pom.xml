<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ensimag_dac-ear</artifactId>

    <name>ensimag-dac application</name>

    <packaging>ear</packaging>

    <parent>
        <artifactId>ensimag_dac</artifactId>
        <groupId>fr.ensimag</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <!-- The absolute path to the Glassfish Server, please change this... -->
    <properties>
        <glassfish.directory>/opt/glassfish4/</glassfish.directory>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>fr.ensimag</groupId>
            <artifactId>ensimag_dac-ejb</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>fr.ensimag</groupId>
            <artifactId>ensimag_dac-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>fr.ensimag</groupId>
            <artifactId>ensimag_dac-api</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.9.1</version>
                <configuration>
                    <version>7</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>fr.ensimag</groupId>
                            <artifactId>ensimag_dac-ejb</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>fr.ensimag</groupId>
                            <artifactId>ensimag_dac-web</artifactId>
                            <context-root>/ensimac_dac-web</context-root>
                        </webModule>
                        <jarModule>
                            <groupId>fr.ensimag</groupId>
                            <artifactId>ensimag_dac-api</artifactId>
                        </jarModule>
                    </modules>
                </configuration>
            </plugin>
            <!-- Glassfish App Server -->
            <plugin>
                <groupId>org.glassfish.maven.plugin</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <user>admin</user>
                    <adminPassword>adminadmin</adminPassword>
                    <glassfishDirectory>${glassfish.directory}</glassfishDirectory>
                    <domainDirectory>${glassfish.directory}/glassfish/domains/</domainDirectory>
                    <passwordFile>/opt/glassfish4/glassfish/domains/domain_dac/config/master-password</passwordFile>
                    <echo>true</echo>
                    <domain>
                        <name>domain_dac</name>
                        <host>localhost</host>
                        <adminPort>4848</adminPort>
                        <httpPort>8080</httpPort>
                        <httpsPort>8181</httpsPort>
                    </domain>
                    <components>
                        <component>
                            <name>${project.artifactId}</name>
                            <artifact>${project.build.directory}/${project.build.finalName}.ear</artifact>
                        </component>
                    </components>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>glassfish-redeploy</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file>
                    <exists>/opt/glassfish4/glassfish/domains/domain_dac/applications/ensimag_dac-ear/META-INF/application.xml</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.glassfish.maven.plugin</groupId>
                        <artifactId>maven-glassfish-plugin</artifactId>
                        <version>2.1</version>
                        <executions>
                            <execution>
                                <id>gf-deploy</id>
                                <goals>
                                    <goal>undeploy</goal>
                                    <goal>deploy</goal>
                                    <goal>stop-domain</goal>
                                    <goal>start-domain</goal>
                                </goals>
                                <phase>deploy</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>glassfish-deploy</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file>
                    <missing>/opt/glassfish4/glassfish/domains/domain_dac/applications/ensimag_dac-ear/META-INF/application.xml</missing>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.glassfish.maven.plugin</groupId>
                        <artifactId>maven-glassfish-plugin</artifactId>
                        <version>2.1</version>
                        <executions>
                            <execution>
                                <id>gf-deploy</id>
                                <goals>
                                    <goal>deploy</goal>
                                    <goal>stop-domain</goal>
                                    <goal>start-domain</goal>
                                </goals>
                                <phase>deploy</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
